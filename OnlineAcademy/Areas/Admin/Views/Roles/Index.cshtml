@model IEnumerable<AcademyDataLayer.Entities.User.Role>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست نقش ها</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        <div class="row">


                        </div>
                        <br />
                        <a href="/Admin/Roles/Create" class="btn btn-success">افزودن نقش جدید</a>
                        <br />
                        <br />
                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr>
                                    <th>نام نقش</th>

                                    @*<th>ویرایش-حذف</th>*@
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.RoleTitle</td>
                                        @*<td>
                                                <a href="/Admin/User/Edit/@item.UserId" class="btn btn-warning">ویرایش</a>
                                                <a href="/Admin/User/Delete/@item.UserId" class="btn btn-danger">حذف</a>
                                            </td>*@
                                    </tr>

                                }

                            </tbody>
                        </table>

                    </div>
                </div>
                <!-- /.table-responsive -->

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

