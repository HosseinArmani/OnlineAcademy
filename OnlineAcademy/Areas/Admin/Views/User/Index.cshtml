@model Academy.Core.ViewModels.UserForAdminViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست کاربران</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <a href="/Admin/User" class="btn btn-dark">لیست کامل</a>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        <div class="row">
                            <form >
                                <div class="col-sm-5 col-md-5">
                                    <input type="text" name="filterUserName" class="form-control" placeholder="نام کاربری" />
                                </div>
                                <div class="col-sm-5 col-md-5">
                                    <input type="text" name="filterEmail" class="form-control" placeholder="ایمیل" />
                                </div>
                                <div class="col-sm-2 col-md-2">
                                    <button type="submit" class="btn btn-info">جستجو</button>
                                </div>
                            </form>
                            
                        </div>
                        <br />
                        <a href="/Admin/User/Create" class="btn btn-success">افزودن کاربر جدید</a>
                        <br />
                        <br />
                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr>
                                    <th>نام کاربری</th>
                                    <th>ایمیل</th>
                                    <th>وضعیت</th>
                                    <th>تاریخ ثیت نام</th>
                                    <th>ویرایش-حذف</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Users)
                                {
                                <tr>
                                    <td>@item.UserName</td>
                                    <td>@item.Email</td>
                                    <td>
                                        @if (item.IsActive)
                                        {
                                            <p class="text-success"> فعال</p>
                                        }
                                        else
                                        {
                                            <p class="text-danger"> غیر فعال</p>

                                        }
                                    </td>
                                    <td>@item.RegisterDate</td>
                                    <td>
                                        <a href="/Admin/User/Edit/@item.UserId" class="btn btn-warning">ویرایش</a>
                                        <a href="/Admin/User/Delete/@item.UserId" class="btn btn-danger">حذف</a>
                                    </td>
                                </tr>
                                    
                                }

                            </tbody>
                        </table>
                        <div class="row">
                       


                        <div class="col-sm-6">
                            <div class="dataTables_paginate paging_simple_numbers" id="dataTables-example_paginate">
                                <ul class="pagination">

                                    @for (int i = 1; i <= Model.CountPage; i++)
                                    {
                                        <li class="paginate_button @((i==Model.CurrentPage)?"active":"")" aria-controls="dataTables-example" tabindex="0">
                                            <a href="/Admin/User?Pageid=@i">@i</a>
                                        </li>
                                    }



                                </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.table-responsive -->
                
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
