@model IEnumerable<Academy.Core.ViewModels.ShowCourseForAdminViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست دوره ها</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست دوره های سایت
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="col-md-12" style="margin: 10px 0;">

                    <a href="/Admin/Course/Create" class="btn btn-outline btn-success">افزودن دوره جدید</a>
                </div>
                <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                    <thead>
                        <tr>
                            <th>تصویر</th>
                            <th>عنوان دوره</th>
                            <th>تعداد جلسه</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <img src="/ImageCourse/Thumb/@item.CourseImageName" class="thumbnail" />
                                </td>
                                <td>
                                    @item.CourseTitle
                                </td>
                                <td>
                                    @item.EpisodeCount
                                </td>
                                <td>
                                    <a href="/Admin/Course/Edit/@item.CourseId" class="btn btn-warning btn-sm">
                                        ویرایش
                                    </a>
                                    @*  <a href="/Admin/Roles/DeleteRole/@role.RoleId" class="btn btn-danger btn-sm">
                                            حذف
                                        </a>*@
                                    <a href="/Admin/Course/IndexEpisode/@item.CourseId" class="btn btn-success btn-sm">
                                        قسمت های دوره
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
