@model AcademyDataLayer.Entities.Order.Order

@{
    ViewData["Title"] = "ShowInvoice";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">آموزشگاه برنامه نویسی</a></li>
            <li class="breadcrumb-item active" aria-current="page"> نمایش فاکتور </li>
        </ul>
    </nav>
</div>

<main>
    <div class="container">
        <div class="user-account">
            <div class="row">
                <partial name="_SideBar" />
                <div class="col-md-9 col-sm-8 col-xs-12">
                    <section class="user-account-content">
                        <header><h1> فاکتور شما </h1></header>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>دوره</th>
                                    <th>تعداد</th>
                                    <th>قیمت</th>
                                    <th>جمع</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.OrderDetails)
                                {
                                    <tr>
                                        <td>
                                            <a href="/ShowCourse/@item.CourseId" target="_blank">@item.Course.CourseTitle</a>
                                        </td>
                                        <td>
                                            @item.Count
                                        </td>
                                        <td>@item.Price</td>
                                        <td>
                                            @((item.Count * item.Price).ToString("#,0"))
                                        </td>
                                    </tr>
                                }
                                <tr>
                                    <td colspan="3" class="text-left">جمع کل</td>
                                    <td>
                                        @((Model.OrderDetails.Sum(od=>od.Price*od.Count)).ToString("#,0"))
        

                                    </td>
                                </tr>


                            </tbody>
                        </table>
                    </section>
                </div>
            </div>
        </div>
    </div>
</main>